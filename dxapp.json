{
    "name": "eggd_staraligner",
    "title": "eggd_staraligner",
    "summary": "Sentieon STAR aligner",
    "dxapi": "1.0.0",
    "version": "1.0.0",
    "properties": {
      "githubRelease": "v1.0.0"
    },
    "inputSpec": [
        {
        "name": "left_fq",
        "label": "left_fq",
        "help": "gzipped fastq for R1",
        "class": "file",
        "patterns": ["*.fastq.gz"],
        "default": {"$dnanexus_link": "file-GFk23qQ4Fp0f28zp1zK2pZ2y"},
        "optional": true
        },
        {
        "name": "right_fq",
        "label": "right_fq",
        "help": "gzipped fastq for R2",
        "class": "file",
        "patterns": ["*.fastq.gz"],
        "default": {"$dnanexus_link":"file-GFk23y04Fp0Xz0BX0K7G85yP"},
        "optional": true
        },
        {
        "name": "sentieon_tar",
        "label": "sentieon_tar",
        "help": "tarballed sentieon",
        "class": "file",
        "patterns": ["sentieon-genomics-*.tar.gz"],
        "default": {"$dnanexus_link": "file-GFbv1x841V8V2zFP8vKf37QZ"}, 
        "optional": false
        },
        {
        "name": "genome_indexes",
        "label": "genome_indexes",
        "help": "Genomes indexes",
        "class": "file",
        "patterns": ["*"],
        "default": {"$dnanexus_link": "file-GGFbbG042QQzyV6kJ507B9Zy"}, 
        "optional": false
        },
        {
        "name": "reference_genome",
        "label": "reference_genome",
        "help": "GRCh38 reference genome FASTA + index",
        "class": "file",
        "patterns": ["*"],
        "default": {"$dnanexus_link": "file-Fy4j2G04qB6zQK885B5Q8Pqp"}, 
        "optional": false
        }
    ],
    "outputSpec": [
      {
        "name": "output_bam",
        "label": "Output bam file",
        "class": "file",
        "optional": true,
        "patterns": [
          "*"
        ],
        "help": ""
      },
      {
        "name": "output_bam_bai",
        "label": "Output bam.bai file",
        "class": "file",
        "optional": true,
        "patterns": [
          "*"
        ],
        "help": ""
      }
    ],
    "runSpec": {
      "distribution": "Ubuntu",
      "release": "20.04",
      "version": "0",
      "interpreter": "bash",
      "file": "src/script.sh",
      "timeoutPolicy": {
        "*": {
          "hours": 1
        }
      }
    },
    "developers":[
      "org-emee_1"
    ],
    "authorizedUsers": [
      "org-emee_1"
    ],
    "access": {
      "project": "CONTRIBUTE",
      "network": ["*"],
      "allProjects": "VIEW"
    },
    "regionalOptions": {
      "aws:eu-central-1": {
        "systemRequirements": {
          "*": {
            "instanceType": "mem1_ssd1_x32"
          }
        }
      }
    }
  }