{
    "name": "eggd_staraligner",
    "title": "eggd_staraligner",
    "summary": "Sentieon STAR aligner",
    "dxapi": "1.0.0",
    "version": "1.0.0",
    "properties": {
      "githubRelease": "v1.0.0"
    },
    "inputSpec": [
        {
          "name": "fastqs",
          "label": "fastq files",
          "help": "gzipped fastq files to run STAR aligner on",
          "class": "array:file",
          "patterns": ["*.fastq.gz", "*.fq.gz"]
        },
        {
        "name": "sentieon_tar",
        "label": "sentieon_tar",
        "help": "Tarballed Sentieon package. Currently defaults to use Sentieon 202112.05",
        "class": "file",
        "patterns": ["sentieon-genomics-*.tar.gz"],
        "default": {"$dnanexus_link": "file-GFbv1x841V8V2zFP8vKf37QZ"}, 
        "optional": false
        },
        {
        "name": "genome_indices",
        "label": "genome_indices",
        "help": "Tarballed genome indices for reference genome",
        "class": "file",
        "patterns": ["*"],
        "default": {"$dnanexus_link": "file-GJ3GJfQ4G7P65QP7J64KQVvv"}, 
        "optional": false
        },
        {
        "name": "reference_genome",
        "label": "reference_genome",
        "help": "tarballed GRCh38 reference genome FASTA + index",
        "class": "file",
        "patterns": ["*"],
        "default": {"$dnanexus_link": "file-GFGY3Bj4kj419YZq4bK0fg2x"}, 
        "optional": false
        }
    ],
    "outputSpec": [
      {
        "name": "output_bam",
        "label": "Output bam file from STAR aligner",
        "class": "file",
        "patterns": [
          "*bam"
        ],
        "help": ""
      },
      {
        "name": "output_bam_bai",
        "label": "Output bam.bai file from STAR aligner",
        "class": "file",
        "patterns": [
          "*bam.bai"
        ],
        "help": ""
      },
      {
        "name": "chimeric_junctions",
        "label": "Chimeric.out.junction file",
        "class": "file",
        "optional": true,
        "patterns": [
          "*"
        ],
        "help": ""
      },
      {
      "name": "logs",
      "label": "Sentieon STAR aligner log files",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
      }
    ],
    "runSpec": {
      "distribution": "Ubuntu",
      "release": "20.04",
      "version": "0",
      "interpreter": "bash",
      "file": "src/script.sh",
      "timeoutPolicy": {
        "*": {
          "hours": 1
        }
      }
    },
    "developers":[
      "org-emee_1"
    ],
    "authorizedUsers": [
      "org-emee_1"
    ],
    "access": {
      "project": "CONTRIBUTE",
      "network": ["*"],
      "allProjects": "VIEW"
    },
    "regionalOptions": {
      "aws:eu-central-1": {
        "systemRequirements": {
          "*": {
            "instanceType": "mem1_ssd1_x32"
          }
        }
      }
    }
  }